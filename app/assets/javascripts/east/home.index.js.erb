(function($) {
	var items = [
		    {src : '<%= image_path('BillboardPrDC2011-Winnipeg.jpg')%>', url : '/about'}
		];
	function RotateImages(index)
	{
		index = index || 0;
		
		var $a = $('#Rotating1 a'),
		    $img = $a.children('img'),
		    indexIsOutOfBounds = index >= items.length,
		    needToRotate = items.length > 1;
		
		index = indexIsOutOfBounds ? 0 : index;
		
		items = items[index];
		
		$a.attr('href', items.url);
		$img.attr('src', items.src);
		
		if (needToRotate)
		{
			window.setTimeout("RotateImages("+(index+1)+")", 12000);
		}
	}
	
	$(document).ready(function(){RotateImages(0);});
	
})(jQuery);
