%html
  %head
    %meta{'http-equiv'=>"Content-Type", :content=>"text/html; charset=UTF-8"}
    %title= "#{@conference.name} conference"
    %meta{:name=>"title", :content=>"#{@conference.name} conference"}
    %meta{:name=>"keywords", :content=>""}
    %meta{:name=>"description", :content=>""}
    %meta{:name=>"copyright", :content=> "#{@conference.name} conference"}
    %meta{:name=>"revisit-after", :content=>"15 days"}

    %meta{:name=>"robots", :content=>"all"}
    = stylesheet_link_tag "application", :debug => Rails.env.development?
    = csrf_meta_tags
    = yield :dochead

  %body{class: body_style}
    .topbar
      .fill
        .container
          = link_to("#{@conference.name} conference", '#', class: 'brand')
        
          %ul.nav
            %li= link_to 'Home', :root
            %li= link_to 'Speakers', speakers_path
            %li= link_to 'Sessions', sessions_path
            %li= link_to 'Schedule', schedule_path
            %li= link_to 'Mobile', '/develop'
            - if current_user
              %li= link_to 'Log Out', log_out_path 

    .container
      = yield

      %footer
        %p
          = link_to 'Privacy Policy', '/privacy'
          |
          = link_to 'Terms And Conditions', '/toc'

    = javascript_include_tag "application", :debug => Rails.env.development?
    = yield :doctail 