#content.schedule  
  %article
    %header 
      .time
      %h1 Schedule
      .comments

    %h2= link_to("Edit Schedule", events_path) if current_user
    
    - i = 0
    - @events_by_day.each_pair do |date, events|
      - unless events.empty?
        %table#calendar
          %header= "Day #{i + 1} - #{date.strftime('%b %d %Y')}"
          %thead
            = schedule_headers(@rooms)
          %tbody
            = schedule_events(events, @rooms)
